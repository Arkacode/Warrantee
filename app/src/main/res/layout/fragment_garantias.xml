<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentGarantias"
    android:orientation="vertical"

    android:id="@+id/linear">

    <!-- TODO: Update blank fragment layout -->

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:id="@+id/listViewGarantias" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='Ainda nÃ£o tem garantias. Clique no "+" para adicionar'
            android:textAlignment="center"
            android:textSize="36sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/GreenMain"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_add_black_24px"
            app:rippleColor="@android:color/transparent"
            app:backgroundTint="@color/GreenMain"
            android:id="@+id/fabGarantias" />

</android.support.design.widget.CoordinatorLayout>
