<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prova_compra"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipca.cm.warrantee.ProvaCompraActivity">


    <Button android:id="@+id/buttonTirarFoto"
        android:text="Tirar foto do comprovativo"
        android:textColor="@color/cardview_light_background"
        android:background="@color/GreenMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </Button>

    <ImageView android:id="@+id/imageViewFotoComprovativo"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </ImageView>

</LinearLayout >
