<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    tools:context="pt.ipca.cm.warrantee.FragmentInformacaoGarantia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Iphone 7 Maria"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textViewNomeInfoGarantia"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="150dp" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Pendente..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitulo"
                android:textSize="24sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarInfoGarantia"
                android:layout_centerVertical="true"
                android:progress="50"
                android:paddingRight="16dp"
                android:layout_marginLeft="25dp" />

            <TextView
                android:text="200 dias restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDiasInfoGarantia"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:layout_below="@+id/progressBarInfoGarantia"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
