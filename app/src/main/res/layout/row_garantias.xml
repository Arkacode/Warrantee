<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="200dp" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMarca"
                android:layout_below="@+id/textViewTitulo"
                android:layout_toEndOf="@+id/imageViewFoto"
                android:textColor="@color/GreenMain"
                android:layout_marginLeft="25dp" />

            <ImageView
                android:layout_height="150dp"
                app:srcCompat="@drawable/iphone"
                android:id="@+id/imageViewFoto"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp" />

            <TextView
                android:text="iPhone 7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitulo"
                android:layout_alignTop="@+id/imageViewFoto"
                android:layout_toEndOf="@+id/imageViewFoto"
                android:textSize="24sp"
                android:textColor="@color/GreenMain"
                android:layout_marginLeft="25dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar2"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewFoto"
                android:progress="50"
                android:paddingRight="16dp"
                android:layout_marginLeft="25dp" />

            <TextView
                android:text="200 dias restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDias"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:layout_below="@+id/progressBar2"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>