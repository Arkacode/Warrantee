<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipca.cm.warrantee.FragmentInformacaoDetalhes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prova de compra"
        android:textSize="24sp"
        android:id="@+id/textViewNomeInfoGarantia"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@color/GreenMain"
        android:layout_below="@+id/textViewNomeInfoGarantia"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes de compra"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHoldInfoRow1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="01/01/2017"
            android:id="@+id/textViewDataCompra"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="Porto"
            android:id="@+id/textViewLocalCompra"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolderRow2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Data de compra"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="Local de compra"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHoldInfoRow3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5.00"
            android:id="@+id/textViewPrecoProduto"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="8849849848"
            android:id="@+id/textViewCodigoBarrasProduto"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolderRow4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Preço"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="Código de barras"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHoldInfoRow5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="USD"
            android:id="@+id/textViewMoedaPreco"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="213243423"
            android:id="@+id/textViewNumSerie"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolderRow6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Moeda"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="Número de série"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolderRow7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="12 meses"
            android:layout_weight="5"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="5dp"
            android:id="@+id/textViewPeriodoInfo"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolderRow8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Periodo"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:textSize="24sp"/>
    </LinearLayout>

</LinearLayout>
