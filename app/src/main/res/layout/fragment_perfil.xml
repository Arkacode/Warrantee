<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    tools:context="pt.ipca.cm.warrantee.FragmentPerfil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewDrawerPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:civ_border_color="#ffffff"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Primeiro Ultimo Nome"
            android:id="@+id/textViewNomeCompleto"
            android:layout_weight="8"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Primeiro Ultimo Nome"
            android:id="@+id/textViewEmail"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:id="@+id/editTextNome"
            android:hint="Primeiro nome"
            android:layout_alignParentStart="true"
            android:layout_weight="10"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:id="@+id/editTextPais"
            android:hint="País"
            android:layout_alignParentStart="true"
            android:layout_weight="10"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:id="@+id/editTextNumTlm"
            android:hint="Num Telemovel"
            android:layout_alignParentStart="true"
            android:layout_weight="10"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHolder9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_below="@id/textHolder1">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:id="@+id/editTextCodPostal"
            android:hint="Código Postal"
            android:layout_alignParentStart="true"
            android:layout_weight="10"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/buttonConfirmar"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Confirmar"
        android:background="@color/GreenMain"
        android:textColor="@color/cardview_light_background" />


</LinearLayout>
